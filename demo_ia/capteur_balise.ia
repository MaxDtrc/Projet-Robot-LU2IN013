
avancer d=3 v=40 a=0

//Variables
p = 1
balise_trouvee_avant = false
capteurs_background = true


//Boucle principale
while(capteur_distance > 10){
    //On detecte la balise
    b = capteur_balise
    
    //Derniere position de la balise
    if(b == null){
        //Balise pas trouvÃ©e, on tourne
        if(balise_trouvee_avant == false){
            angle_rota = 2 * p
            tourner a=angle_rota v=200
        }else{
            while(capteur_balise == null){
                avancer d=3 v=-100 a=15
            }
            balise_trouvee_avant = false
        }
    }else{
        //Balise trouvee
        balise_trouvee_avant = true
        distance_arriere = 0
        angle = b * 20
        avancer d=3 v=100 a=angle

        //On change le sens de rotation
        if(b > 0){
            p = -1
        }else{
            p = 1
        }
    }
}