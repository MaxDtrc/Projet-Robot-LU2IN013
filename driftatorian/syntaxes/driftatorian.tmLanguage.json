{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		}
			
	],
	"repository": {
		"functions":{
			"name": "function.name",
			"match": "\\b(tourner|avancer|tourner_tete|print)\\b",
			"settings": {
				"foreground": "#FFA500"
			}
		},
		"booleans":{
			"name": "booleans.name",
			"match": "\\b(true|false|TRUE|FALSE)\\b",
			"settings": {
				"foreground": "#00ff00"
			}
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(if|while|for|return|alterner)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.",
					"match": "\\\\."
				}
			]
		},
		"comments":{
			"name": "comment.line",
			"match": "//.*$"
		},
		"numbers":{
			"name": "constant.numeric",
			"match": "\\b(0x[0-9a-fA-F]+|\\d+)\\b"
		},
		"constants":{
			"name" : "constant.name",
			"match": "\\b(capteur_distance|capteur_balise|random)\\b"
		},
		"variables":{
			"name": "variable.other",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
		},
		"operators":{
			"name": "operators.name",
			"match": "\\b(\\+|\\-|\\*|\\/|\\=|\\<|\\>|\\!|\\&|\\|)\\b",
			"settings":{
				"foreground": "#FFA500"
			}
		}

	},
	"scopeName": "source.ia"
}